@startuml erd-transaction
hide circle

entity "payments" {
  * id : uuid <<PK>>
  --
  * payment_id : uuid
  * provider_txn_id : text
  * amount : bigint
  * currency : text
  * status : text
  * error_code : text
  * created_at : timestamptz
}

entity "payment_outbox" {
  * id : uuid <<PK>>
  --
  * payment_id : uuid
  * event_type : text
  * payload : jsonb
  * created_at : timestamptz
}

@enduml
